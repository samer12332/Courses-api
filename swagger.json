{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Courses API",
        "description": "API documentation for managing courses"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "paths": {
        "/api/courses": {
            "get": {
                "summary": "Retrieve all courses",
                "responses": {
                    "200": {
                        "description": "A list of courses",
                        "schema": {
                            "$ref": "#/definitions/CourseArray"
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new course",
                "parameters": [
                    {
                        "name": "course",
                        "in": "body",
                        "description": "Course object that needs to be added",
                        "schema": {
                            "$ref": "#/definitions/Course"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Course created successfully"
                    }
                }
            }
        },
        "/courses/{id}": {
            "get": {
                "summary": "Retrieve a specific course by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer",
                        "example": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Course details",
                        "schema": {
                            "$ref": "#/definitions/Course"
                        }
                    },
                    "404": {
                        "description": "Course not found"
                    }
                }
            },
            "put": {
                "summary": "Update an existing course",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer",
                        "example": 1
                    },
                    {
                        "name": "course",
                        "in": "body",
                        "description": "Course object that needs to be updated",
                        "schema": {
                            "$ref": "#/definitions/Course"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Course updated successfully"
                    },
                    "404": {
                        "description": "Course not found"
                    }
                }
            },
            "delete": {
                "summary": "Delete a course",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer",
                        "example": 1
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Course deleted successfully"
                    },
                    "404": {
                        "description": "Course not found"
                    }
                }
            }
        }
    },
    "definitions": {
        "Course": {
            "required": [
                "title",
                "price"
            ],
            "type": "object",
            "properties": {
                "id": {
                    "type": "String",
                    "example": "5f93a1ef3b2a453c7c2d9b6a"
                },
                "title": {
                    "type": "String",
                    "example": "Javascript"
                },
                "price": {
                    "type": "String",
                    "example": 2000
                }
            }
        },
        "CourseArray": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Course"
            }
        }
    }
}
